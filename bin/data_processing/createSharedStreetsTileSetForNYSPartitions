#!/bin/bash

set -e

cd "$( dirname "${BASH_SOURCE[0]}" )"

rm -rf sharedstreets_tiles

find data/osm -regex '.*\(upstate\|downstate\).*.[0-9]+.osm.pbf' |
  sort |
  while read -r f; do
    dir="${f/.osm.pbf/}"

    java -jar sharedstreets-builder-0.3.1.jar \
      --input "$f" \
      --output "sharedstreets_tiles/$dir"
  done
