#!/usr/bin/env node

// https://wiki.openstreetmap.org/wiki/Way#Examples
//   The nodes defining the geometry of the way are enumerated in the correct order,
//     and indicated only by reference using their unique identifier.
//   These nodes must have been already defined separately with their coordinates.
//
// https://wiki.openstreetmap.org/wiki/Relation:restriction

const { createReadStream } = require('fs');
const { join } = require('path');
const assert = require('assert');

const yargs = require('yargs');
const XmlStream = require('xml-stream');

const levelup = require('levelup');
const leveldown = require('leveldown');
const encode = require('encoding-down');

const { sync: rimrafSync } = require('rimraf');
const { sync: mkdirpSync } = require('mkdirp');

const cliArgsSpec = {
  osmFile: {
    demand: true,
    type: 'string'
  },
  dbsParentDir: {
    demand: true,
    type: 'string'
  },
  clean: {
    type: 'boolean',
    description: 'Empty the leveldbDir before beginning.',
    default: false
  }
};

const { argv } = yargs
  .strict()
  .parserConfiguration({
    'camel-case-expansion': false,
    'flatten-duplicate-arrays': false
  })
  .wrap(yargs.terminalWidth() / 1.618)
  .option(cliArgsSpec);

const { osmFile, dbsParentDir, clean } = argv;

const OSM_WAYS_DIR = join(dbsParentDir, 'osmWays');
const OSM_NODES_DIR = join(dbsParentDir, 'osmNodes');
const OSM_RESTRICTIONS_DIR = join(dbsParentDir, 'osmRestrictions');

if (clean) {
  rimrafSync(OSM_WAYS_DIR);
  rimrafSync(OSM_NODES_DIR);
  rimrafSync(OSM_RESTRICTIONS_DIR);
}

mkdirpSync(OSM_WAYS_DIR);
mkdirpSync(OSM_NODES_DIR);
mkdirpSync(OSM_RESTRICTIONS_DIR);

const osmWaysDB = levelup(
  encode(leveldown(OSM_WAYS_DIR), { valueEncoding: 'json' })
);
const osmNodesDB = levelup(
  encode(leveldown(OSM_NODES_DIR), { valueEncoding: 'json' })
);
const osmRestrictionsDB = levelup(
  encode(leveldown(OSM_RESTRICTIONS_DIR), { valueEncoding: 'json' })
);

const loadNode = async d => {
  const {
    $: { id, lat, lon },
    tag
  } = d;

  const tags = Array.isArray(tag)
    ? tag.reduce((acc, { $: { k, v } }) => {
        acc[k] = v;
        return acc;
      }, {})
    : null;

  await osmNodesDB.put(id, { id, lat: +lat, lon: +lon, tags });
};

const loadRestriction = async d => {
  const { member, tag } = d;

  const tags = Array.isArray(tag)
    ? tag.reduce((acc, { $: { k, v } }) => {
        acc[k] = v;
        return acc;
      }, {})
    : null;

  if (tags && tags.type === 'restriction') {
    const members = member.map(({ $: { type, ref, role } }) => ({
      type,
      ref,
      role
    }));

    let { ref: nodeId = null } =
      members.find(({ role }) => role.match(/via/i)) || {};

    // All restrictions without a nodeId will be keyed by -1.
    assert(nodeId !== -1); // INVARIANT: no existing OSM nodes have -1 as ID.
    if (nodeId === null) {
      nodeId = -1;
    }

    let restrictions;

    try {
      restrictions = await osmRestrictionsDB.get(nodeId);
    } catch (err) {
      restrictions = [];
    }

    restrictions.push(d);

    await osmRestrictionsDB.put(nodeId, restrictions);
  }
};

const loadWay = async d => {
  const {
    $: { id },
    nd,
    tag
  } = d;

  const nodes = Array.isArray(nd) ? nd.map(({ $: { ref } }) => ref) : null;

  const tags = Array.isArray(tag)
    ? tag.reduce((acc, { $: { k, v } }) => {
        acc[k] = v;
        return acc;
      }, {})
    : null;

  await osmWaysDB.put(id, { id, nodes, tags });
};

const osmStream = createReadStream(osmFile);

const xml = new XmlStream(osmStream);

xml.collect('node tag');
xml.on('endElement: node', loadNode);

xml.collect('relation member');
xml.collect('relation tag');
xml.on('endElement: relation', loadRestriction);

xml.collect('way nd');
xml.collect('way tag');
xml.on('endElement: way', loadWay);
